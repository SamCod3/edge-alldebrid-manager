{
  "manifest_version": 3,
  "name": "AllDebrid Manager Pro",
  "version": "1.4",
  "description": "Gestiona, descarga y env√≠a torrents a AllDebrid.",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_title": "Abrir Gestor AllDebrid"
  },
  "background": {
    "service_worker": "background.js",
